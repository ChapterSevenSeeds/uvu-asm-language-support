{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "UVU ASM",
	"patterns": [
		{
			"instruction": "#keywords&labels"
		},
		{
			"comment-only-line": "#comment"
		}
	],
	"repository": {
		"keywords&labels": {
			"match": "^(\\S*)\\s+([\\w\\.]+)\\s*([a-zA-Z0-9_']*)(?:,\\s+(\\S*))?",
			"captures": {
				"0":{
					"name": "variable.name"
				},
				"1": {
					"name": "keyword.control"
				},
				"2": {
					"patterns": [
						{
							"begin": " (r|R)",
							"end": " |$",
							"name": "variable.parameter"
						},
						{
							"begin": "(0x)|#",
							"end": " |$",
							"name": "constant.numeric"
						},
						{
							"begin": "'",
							"end": "'",
							"name": "constant.character"
						},
						{
							"begin": ";",
							"end": "$",
							"name": "comment.line"
						}
					]
				},
				"3": {
					"patterns": [
						{
							"begin": " (r|R)",
							"end": " |$",
							"name": "variable.parameter"
						},
						{
							"begin": "(0x)|#",
							"end": " |$",
							"name": "constant.numeric"
						},
						{
							"begin": "'",
							"end": "'",
							"name": "constant.character"
						},
						{
							"begin": ";",
							"end": "$",
							"name": "comment.line"
						}
					]
				}
			}
		}
	},
	"scopeName": "source.uvuasm"
}